package com.cps.services.engine;

import com.cps.services.character.Player;

/**
 * Service : Moteur de jeu
 * @author cb_mac
 *
 */
public interface Engine {

	/*Observators*/

	public int getHeight();
	public int getWidth();

	// \pre: i:int \in {1,2}
	public Character getChar(int i);

	// \pre: i:int \in {1,2}
	public Player getPlayer(int i);
	
	public boolean isGameOver();
	
	/*Invariants*/
	
	// \inv: isGameOver() == Character::isDead(getPlayer(i))  , \with i:int \in {1,2}
	
	/*Constructors*/
	
	// \pre : h>0
	// \pre : s>0
	// \pre : w>s
	// \pre : p1!=p2
	
	// \post : getHeight() == h
	// \post : getWidth() == w
	// \post : getPlayer(1) == p1
	// \post : getPlayer(2) == p2
	
	
	
	public void init(int h, int w, int s ,Player p1 ,Player p2);

}
