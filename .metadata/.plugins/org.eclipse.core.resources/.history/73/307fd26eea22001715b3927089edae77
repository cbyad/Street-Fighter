package com.cps.services.engine;

import com.cps.services.character.Player;

/**
 * Service : Moteur de jeu
 * @author cb_mac
 *
 */
public interface Engine {

	/*Observators*/

	public int getHeight();
	public int getWidth();

	// \pre: i:int \in {1,2}
	public Character getChar(int i);

	// \pre: i:int \in {1,2}
	public Player getPlayer(int i);

	public boolean isGameOver();

	/*Invariants*/

	// \inv: isGameOver() == Character::isDead(getPlayer(i))  , \with i:int \in {1,2}

	/*Constructors*/

	// \pre : h>0
	// \pre : s>0
	// \pre : w>s
	// \pre : p1 != p2

	// \post : getHeight() == h
	// \post : getWidth() == w
	// \post : getPlayer(1) == p1
	// \post : getPlayer(2) == p2

	// \post: (char1=getChar(1)):Character , char1.getPositionX()==(w/2 - s/2)
	// \post: (char2=getChar(2)):Character , char2.getPositionX() == (w/2 + s/2)
	// \post: (char1=getChar(1)):Character , char1.getPositionY() == 0
	// \post: (char2=getChar(2)):Character , char2.getPositionY() == 0
	// \post: Character::isFaceRight(getChar(1)) 
	// \post: ! Character::isFaceRigth(getChar(2)) 
	public void init(int h, int w, int s ,Player p1 ,Player p2);

	
	/*Operators*/
	
	// \pre : !isGameOver()
	// \post: getChar(1) == step(char(E; 1); C1)
	
	// \post: char(step(E; C1; C2); 2) = step(char(E; 2); C2)
	
	public void step(Commande c1 , Commande c2);
	
}












